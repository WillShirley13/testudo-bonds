{
    "name": "@testudo/testudo-bonds",
    "version": "0.0.0",
    "description": "JavaScript client for the Testudo Bonds program",
    "sideEffects": false,
    "module": "./dist/src/index.mjs",
    "main": "./dist/src/index.js",
    "types": "./dist/types/index.d.ts",
    "type": "commonjs",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/src/index.mjs",
            "require": "./dist/src/index.js"
        }
    },
    "files": [
        "./dist/src",
        "./dist/types"
    ],
    "scripts": {
        "build": "rimraf dist && tsup && tsc -p ./tsconfig.declarations.json",
        "build:docs": "typedoc",
        "test": "vitest run --reporter=verbose",
        "test:watch": "vitest --reporter=verbose",
        "test:ui": "vitest --ui",
        "lint": "eslint --ext js,ts,tsx src",
        "lint:fix": "eslint --fix --ext js,ts,tsx src",
        "format": "prettier --check src test",
        "format:fix": "prettier --write src test",
        "prepublishOnly": "pnpm build"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Testudo/testudo-bonds.git"
    },
    "bugs": {
        "url": "https://github.com/Testudo/testudo-bonds/issues"
    },
    "homepage": "https://github.com/Testudo/testudo-bonds#readme",
    "license": "MIT",
    "peerDependencies": {
        "@solana/web3.js": "1.98.2"
    },
    "devDependencies": {
        "@solana/eslint-config-solana": "5.0.0",
        "@solana/web3.js": "1.98.2",
        "@types/node": "24.0.14",
        "@typescript-eslint/eslint-plugin": "8.37.0",
        "@typescript-eslint/parser": "8.37.0",
        "@vitest/ui": "^3.2.4",
        "eslint": "9.31.0",
        "prettier": "3.6.2",
        "rimraf": "6.0.1",
        "ts-node": "^10.9.2",
        "tsup": "8.5.0",
        "tsx": "^4.20.3",
        "typedoc": "0.28.7",
        "typescript": "5.8.3",
        "vitest": "^3.2.4"
    },

    "packageManager": "pnpm@9.1.0",
    "dependencies": {
        "@solana-program/system": "^0.7.0",
        "@solana-program/token": "^0.5.1",
        "@solana/kit": "^2.3.0",
        "@solana/spl-token": "^0.4.13"
    }
}